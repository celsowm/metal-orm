{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "emitDecoratorMetadata": false,
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "types": ["node"],
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "@orm/*": ["./*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
