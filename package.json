{
  "name": "metal-orm",
  "version": "1.0.46",
  "type": "module",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "metal-orm-gen": "./scripts/generate-entities.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "global.d.ts",
    "scripts"
  ],
  "scripts": {
    "build": "tsup",
    "check": "tsc --noEmit",
    "gen:entities": "node scripts/generate-entities.mjs",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "show-sql": "node scripts/show-sql.mjs",
    "lint": "node scripts/run-eslint.mjs",
    "lint:fix": "node scripts/run-eslint.mjs --fix"
  },
  "peerDependencies": {
    "mysql2": "^3.9.0",
    "pg": "^8.0.0",
    "sqlite3": "^5.1.6",
    "tedious": "^16.0.0"
  },
  "peerDependenciesMeta": {
    "mysql2": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "sqlite3": {
      "optional": true
    },
    "tedious": {
      "optional": true
    }
  },
  "devDependencies": {
    "@vitest/ui": "^4.0.14",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^8.57.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "mysql2": "^3.15.3",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7",
    "tedious": "^19.1.3",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.14"
  }
}
