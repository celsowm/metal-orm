{
  "name": "metal-orm",
  "version": "1.0.112",
  "type": "module",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "metal-orm-gen": "./scripts/generate-entities.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "global.d.ts",
    "scripts"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsup",
    "check": "tsc --noEmit",
    "gen:entities": "node scripts/generate-entities.mjs",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:mysql": "vitest --run tests/e2e/mysql-memory.test.ts tests/e2e/decorators-mysql-memory.test.ts tests/e2e/save-graph-mysql-memory.test.ts",
    "test:mysql:optimized": "vitest --run --config tests/e2e/mysql/vitest.config.ts",
    "test:sqlite": "vitest --run tests/e2e/sqlite-memory.test.ts tests/e2e/decorators-sqlite-memory.test.ts tests/e2e/save-graph-sqlite-memory.test.ts",
    "test:pglite": "vitest --run tests/e2e/pglite-memory.test.ts",
    "test:e2e": "vitest --run tests/e2e",
    "show-sql": "node scripts/show-sql.mjs",
    "lint": "node scripts/run-eslint.mjs",
    "lint:fix": "node scripts/run-eslint.mjs --fix"
  },
  "peerDependencies": {
    "mysql2": "^3.9.0",
    "pg": "^8.0.0",
    "sqlite3": "^5.1.6",
    "tedious": "^19.0.0"
  },
  "peerDependenciesMeta": {
    "mysql2": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "sqlite3": {
      "optional": true
    },
    "tedious": {
      "optional": true
    }
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.15",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "express": "^5.2.1",
    "mysql-memory-server": "^1.14.0",
    "mysql2": "^3.16.2",
    "pg": "^8.17.2",
    "sqlite3": "^5.1.7",
    "supertest": "^7.2.2",
    "tedious": "^19.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
